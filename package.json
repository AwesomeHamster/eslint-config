{
  "name": "@hamster-bot/eslint-config",
  "version": "1.0.8",
  "description": "Common ESLint configuration used in Hamster",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaikoTan/eslint-config.git"
  },
  "author": {
    "name": "Maiko Tan",
    "url": "https://github.com/MaikoTan",
    "email": "maiko.tan.coding@gmail.com"
  },
  "license": "CC-BY-NC-4.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./index": {
      "types": {
        "import": "./dist/index.d.ts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./node": {
      "types": {
        "import": "./dist/node.d.ts"
      },
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    },
    "./typescript": {
      "types": {
        "import": "./dist/typescript.d.ts"
      },
      "import": "./dist/typescript.js",
      "require": "./dist/typescript.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "prepublishOnly": "yarn build"
  },
  "prettier": "@hamster-bot/prettier-config",
  "eslintConfig": {
    "extends": [
      "./dist/index.js"
    ]
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "eslint-config-standard": "^17.1.0"
  },
  "devDependencies": {
    "@hamster-bot/prettier-config": "*",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^8.56.10",
    "@types/eslint__eslintrc": "^2.1.1",
    "eslint": ">=9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-promise": "^6.2.0",
    "globals": "^15.3.0",
    "rollup": "^4.18.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.12.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": ">=9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-mocha": "^10.3.0",
    "eslint-plugin-n": "^17.3.1",
    "eslint-plugin-promise": "^6.1.0"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "@typescript-eslint/parser": {
      "optional": true
    },
    "eslint-import-resolver-typescript": {
      "optional": true
    },
    "eslint-plugin-mocha": {
      "optional": true
    },
    "eslint-plugin-n": {
      "optional": true
    }
  },
  "packageManager": "yarn@4.2.2"
}
