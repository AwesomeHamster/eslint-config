{
  "name": "@hamster-bot/eslint-config",
  "version": "2.2.0",
  "description": "Common ESLint configuration used in Hamster",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaikoTan/eslint-config.git"
  },
  "author": {
    "name": "Maiko Tan",
    "url": "https://github.com/MaikoTan",
    "email": "maiko.tan.coding@gmail.com"
  },
  "license": "CC-BY-NC-4.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "lint": "eslint .",
    "prepublishOnly": "yarn build"
  },
  "prettier": "@hamster-bot/prettier-config",
  "dependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import-x": "^3.1.0",
    "eslint-plugin-n": "^17.9.0",
    "eslint-plugin-promise": "^7.0.0",
    "globals": "^15.8.0",
    "typescript-eslint": "^7.15.0"
  },
  "devDependencies": {
    "@hamster-bot/prettier-config": "*",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^9.6.0",
    "@types/eslint__eslintrc": "^2.1.1",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": ">=9",
    "eslint-plugin-mocha": "^10.4.3",
    "rollup": "^4.18.0",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "eslint": ">=9",
    "eslint-plugin-mocha": "^10.3.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-mocha": {
      "optional": true
    }
  },
  "packageManager": "yarn@4.3.1"
}
